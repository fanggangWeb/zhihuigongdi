.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 15%;
  overflow-y: auto;
  background: rgba(0,0,0,0.4);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dialog {
  width: calc(100% - 60rpx);
  padding: 50rpx 46rpx 46rpx 46rpx;
  box-sizing: border-box;
  background: white;
  border-radius: 20rpx;
}
.dialog-title {
  color: #222222;
  font-size: 40rpx;
  text-align: center;
  line-height: 56rpx;
  font-weight: bold;
}
.dialog-content {
  width: 100%;
  min-height: 228rpx;
  margin-top: 38rpx;
  box-sizing: border-box;
  padding: 24rpx 38rpx;
  color: #222222;
  font-size: 32rpx;
  line-height: 48rpx;
  background: #F1F1F1;
  border-radius: 10rpx;
}

.confirm-btn {
  width: 100%;
  height: 90rpx;
  margin-top: 46rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: white;
  background: #1CB975;
  border-radius: 46rpx;
  cursor: pointer;
}