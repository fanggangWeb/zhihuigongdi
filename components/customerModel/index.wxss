.customer-model{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background: rgba(0,0,0,0.4);

}
.model-content{
  background-color: #fff;
  width:690rpx;
  padding:80rpx 88rpx;
  border-radius:10rpx;
  position: relative;
}
.center_2{
  display: flex;
  justify-content: center;
  align-items: center
}

/* 客户标题 */
.title{
  text-align: left;
  line-height:40rpx;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  width: 100%;
  margin-bottom: 26rpx;
}
/* 客户列表 */
.customer-box{
  margin-bottom: 60rpx;
}
.customer-box scroll-view{
height:460rpx;
overflow: hidden;
}
.customer-wrap{
	display: flex;
	flex-flow: row wrap;
	align-items: center;
	/* justify-content: space-between; */
}
.customer-item{
  width:162rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,238,238,1);
  border-radius:4rpx;
  position: relative;
  box-shadow:0px 6rpx 12rpx rgba(0,0,0,0.04);
  /* display: inline-block; */
  margin-right: 14rpx;
  margin-bottom: 14rpx;
  height: 214rpx;
}
.customer-item:nth-child(3n){
  margin-right: 0
}
.customer-header{
  position: relative;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.customer-header, .customer-header .header-img{
  width:160rpx;
  height:160rpx;
  border-radius:4rpx;
  
}
 .customer-header .header-img{
  width:100%;
  height:100%;
  border-radius:4rpx;
  
}
.change-box{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  z-index: 9;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center;
}

.change-ok-img{
  width: 22rpx;
  height: 17rpx;
}
.customer-info{
  padding: 13rpx 15rpx;
}
.customer-info .c-info-item{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.c-info-mt{
  margin-top: 10rpx;
}
.customer-info .c-info-item image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 12rpx;
}
.customer-info .c-info-item text{
  font-size:20rpx;
  font-weight:500;
  line-height: 28rpx;
  color:rgba(0,0,0,1);
}

/* 选择 */
.change-counselor{
 border-bottom: 1px solid rgba(57,107,234,1);
}

.change-counselor .picker{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}
.change-counselor text{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.change-counselor image{
  width: 32rpx;
  height: 20rpx;
}
/* 按钮 */
.submit-button{
   width: 100%;
  height:80rpx;
  background:#396BEA;
  box-shadow:0px 6rpx 12rpx rgba(11,107,232,0.25);
  border-radius: 48rpx;
  font-size: 32rpx;
  line-height: 90rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-top:80rpx;

}

/* 关闭
 */
.close{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top: -60rpx;
	right: 0;
	
}
.close image{
	width: 100%;
	height: 100%;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
	width: 0;
	height: 0;
	color: transparent;
}