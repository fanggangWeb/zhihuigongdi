<view class="container">
  <view class="list-con">
    <view class="list {{item.isRead==0?'':'isRead'}}" wx:for="{{dataList}}">
      <view class="icon-con">
        <view class="icon-dot" wx:if="{{item.isRead==0}}"></view>
        <image class="icon-img" wx:if="{{item.type==1&&item.isRead==0}}" src="../../assets/images/alertMessage/helmet.png"></image>
        <image class="icon-img" wx:if="{{item.type==1&&item.isRead==1}}" src="../../assets/images/alertMessage/helmet1.png"></image>
        <image class="icon-img" wx:if="{{item.type==2&&item.isRead==0}}" src="../../assets/images/alertMessage/person-intrusion.png"></image>
        <image class="icon-img" wx:if="{{item.type==2&&item.isRead==1}}" src="../../assets/images/alertMessage/person-intrusion1.png"></image>
        <image class="icon-img" wx:if="{{item.type==3&&item.isRead==0}}" src="../../assets/images/alertMessage/crowd-gather.png"></image>
        <image class="icon-img" wx:if="{{item.type==3&&item.isRead==1}}" src="../../assets/images/alertMessage/crowd-gather1.png"></image>
        <image class="icon-img" wx:if="{{item.type==4&&item.isRead==0}}" src="../../assets/images/alertMessage/fire.png"></image>
        <image class="icon-img" wx:if="{{item.type==4&&item.isRead==1}}" src="../../assets/images/alertMessage/fire1.png"></image>
        <image class="icon-img" wx:if="{{item.type==5&&item.isRead==0}}" src="../../assets/images/alertMessage/muck-truck.png"></image>
        <image class="icon-img" wx:if="{{item.type==5&&item.isRead==1}}" src="../../assets/images/alertMessage/muck-truck1.png"></image>
        <image class="icon-img" wx:if="{{item.type==6&&item.isRead==0}}" src="../../assets/images/alertMessage/boundary.png"></image>
        <image class="icon-img" wx:if="{{item.type==6&&item.isRead==1}}" src="../../assets/images/alertMessage/boundary1.png"></image>
        <image class="icon-img" wx:if="{{item.type==7&&item.isRead==0}}" src="../../assets/images/alertMessage/material.png"></image>
        <image class="icon-img" wx:if="{{item.type==7&&item.isRead==1}}" src="../../assets/images/alertMessage/material1.png"></image>
      </view>
      <view class="text-con">
        <view class="text-top">
          <view class="type">{{item.title}}</view>
          <view class="time">{{item.time}}</view>
        </view>
        <view class="text-bottom">
          {{item.content}}
        </view>
      </view>
    </view>
  </view>
</view>
<message-modal wx:if="{{dialogState}}" bind:confirm="hadKnown" title="预警信息" content="某某某。。。" confirmText="我已知晓"></message-modal>