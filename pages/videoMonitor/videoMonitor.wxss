page {
  width: 100%;
  height: 100%;
  overflow-y: auto;
}
.container {
  width: 100%;
}
.top-video {
  width: 100%;
  height: 420rpx;
}
/* 信息条 */
.channel-info {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  color: #222222;
  font-size: 28rpx;
  border-bottom: 2rpx solid #DDDDDD;
}
.channel-icon {
  width: 28rpx;
  height: 30rpx;
}
.channel-name {
  margin-left: 8rpx;
  width: 550rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.dot {
  width: 10rpx;
  height: 10rpx;
  margin-left: auto;
  border-radius: 50%;
  background-color: #1CB975;
}
.stauts-text {
  margin-left: 8rpx;
}
/* 下方直播地址 */
.video-list {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.video-item {
  width: 216rpx;
  height: 216rpx;
  position: relative;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.video-item:nth-child(3n) {
  margin-right: 0;
}
.poster {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.info-bar {
  z-index: 2;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 48rpx;
  box-sizing: border-box;
  padding: 0 18rpx;
  color: white;
  font-size: 24rpx;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
}
.info-bar .name{
  width: 60%;
  
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.info-bar .status {
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
}
.status-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #1CB975;
  margin-left: auto;
}
.status-value {
  color: white;
  font-size: 24rpx;
}