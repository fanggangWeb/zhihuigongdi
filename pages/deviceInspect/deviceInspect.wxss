.container {
  width: 100%;
  height: 100%;
}
.device-con {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.device {
  position: relative;
  width: 100%;
  height: 320rpx;
  /* background-color: red; */
}
.device-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
/* 重塑一个 专门放文字的盒子 与父级一样大 */
.device-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 50rpx  90rpx 0 90rpx;
  z-index: 2;
}
.name, .operator, .status-text {
  color: white;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.name {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 44rpx;
  font-weight: bold;
}

.operator {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  margin-top: 4rpx;
}
.status-con {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  margin-top: 22rpx;
  
  font-size: 32rpx;
}
.status-dot {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  margin-bottom: 17rpx;
  border-radius: 50%;
  background: #14CC7C;
}
.status-text {
  display: inline-block;
  margin-left: 14rpx;
  width: calc(100% - 24rpx);
}