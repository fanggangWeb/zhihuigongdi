<view class="container">
  <view class="content">
    <view class="big-title">密码登录</view>
    <view class="name">智慧工地小程序欢迎您</view>
    <view class="input-box login-box">
      <view class="input-icon">
        <image class="" src="../../assets/images/login-user.png"/>
      </view>
      <view class="text">账号</view>
      <input type="text" placeholder="请输入账号" bindinput="accountInput" placeholder-class="place-style"/>
    </view>
    <view class="input-box pass-box">
      <view class="input-icon">
        <image class="" src="../../assets/images/login-pass.png"/>
      </view>
      <view class="text">密码</view>
      <input type="password" placeholder="请输入密码" bindinput="passInput" placeholder-class="place-style"/>
    </view>
    <view class="error-msg">{{errorMessage}}</view>
    <view class="login-btn" bindtap="toLogin">登录</view>
  </view>
  <!-- <view class="login-bg">
    <image class="" src="../../assets/images/login-bg.png"/>
  </view> -->
</view>