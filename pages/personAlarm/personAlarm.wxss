page {
  width: 100%;
}
.container {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.list-con {
  width: 100%;
}
.list {
  width: 100%;
  height: 160rpx;
  border-bottom: 1rpx solid #DDDDDD;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  color: #222222;
}
/* 未读的样式 */
.list.isRead, .isRead .time {
  color: #A4AFB2;
}

/* 图标包裹 */
.icon-con {
  position: relative;
  width: 96rpx;
  height: 96rpx;
}
.icon-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  line-height: 96rpx;
  text-align: center;
  background: #1CB975;
  color: white;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  overflow: hidden;
  white-space: nowrap;
}
.isRead .icon-icon {
  background: #A4AFB2;
}
.long-top, .long-bottom {
  width: 100%;
  height: 50%;
}
.icon-icon .long-top {
  line-height: 63rpx;
}
.icon-icon .long-bottom {
  line-height: 38rpx;
}
.icon-dot {
  position: absolute;
  top: 0;
  right: 0;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #FF7070;
}
/* 右侧的文字包裹 */
.text-con {
  width: calc(100% - 116rpx);
  height: 96rpx;
  margin-left: 20rpx;
}
.text-top {
  width: 100%;
  height: 44rpx;
  display: flex;
  align-items: center;
}
.type, .time, .text-bottom {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.type {
  width: 300rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.time {
  width: 260rpx;
  margin-left: auto;
  color: #7F8A8D;
  font-size: 24rpx;
  text-align: right;
}
.text-bottom {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 8rpx;
  font-size: 28rpx;
}